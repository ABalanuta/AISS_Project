#!/bin/bash
VAR=$1
if "$1""-box", "-java"]; then 
	echo 
	echo "usage: $0 -box"
	echo "     : for use with HARDWARE AES"
	echo
	echo "usage: $0 -java"
	echo "     : for use with SOFTWARE AES"
	echo
	exit
fi


rm CustomPlugin -R
mkdir CustomPlugin
cp plugin/* -R CustomPlugin/
cd src/aiss/aesBox/
make clean
sh compile.sh
cp libaesbox.* ../../../CustomPlugin/chrome/content/java/
cd ../../../CustomPlugin/
zip -r AESecure.xpi * -x AESecure.xpi -9
rm chrome -R
rm modules -R
rm chrome.manifest install.rdf
